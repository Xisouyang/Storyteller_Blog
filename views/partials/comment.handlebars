<!-- partials/comment.handlebars -->

<div class="card">
  <div class="card-block">
    <h4 class="card-title">{{this.title}}</h4>
    <p class="card-text">{{this.content}}</p>

    <!-- Delete link -->
    <p><form method="POST" action="/posts/comments/{{this._id}}?_method=DELETE">
        <button class="btn" style="background-color: #000000; color: #FFFFFF" type="submit">Delete</button>
    </form></p>

  </div>
</div>
