<!-- views/partials/reviews-form.handlebars -->

<fieldset>
  <!-- TITLE -->
  <p>
    <label for="post-title">Title</label><br>
    <input id="post-title" type="text" name="title" value="{{post.title}}"/>
  </p>

  <!-- DESCRIPTION -->
  <p>
    <label for="post-description">Description</label><br>
    <textarea id="post-description" name="description" rows="10" />{{post.description}}</textarea>
  </p>
</fieldset>
